@using Online_Ticari_Otomasyon.Models.Siniflar
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px; margin-left:20px;width:1080px;">
    <tr style="background-color:maroon; color:white;">  
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>           
            <td>@x.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@x.KategoriID" class="btn btn-default" style="background-color:red;color:white; ">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.KategoriID" class="btn btn-default" style="background-color:orangered;color:white; ">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new { sayfa }))
<a href="/Kategori/KategoriEkle/" class="btn btn-primary" style="margin-left:20px;">Kategori Ekle</a>
