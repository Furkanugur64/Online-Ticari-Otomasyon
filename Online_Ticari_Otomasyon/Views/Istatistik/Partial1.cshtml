@model IEnumerable<Online_Ticari_Otomasyon.Models.Siniflar.SinifGrup2>

<div class="card-header">
    <h3 class="card-title">Departman Personel Tablosu</h3>
</div>
<div class="card-body p-0">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Departman</th>
                <th>ProgressBar</th>
                <th style="width: 40px">Kişi Sayısı</th>
            </tr>
        </thead>
        <tbody>
            @{ int sirano = 0;}
            @foreach (var x in Model)
            {
                <tr>
                    <td>@{sirano++;} @sirano.</td>
                    <td>@x.Departman</td>
                    <td>
                        @if (x.Sayi <= 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        }
                        @if (x.Sayi > 3 && x.Sayi <= 6)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 55%"></div>
                            </div>
                        }
                        @if (x.Sayi > 6)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 55%"></div>
                            </div>
                        }
                    </td>
                    <td>
                        @if (x.Sayi <= 3)
                        {
                            <span class="badge bg-danger">@x.Sayi</span>
                        }
                        @if (x.Sayi > 3 && x.Sayi <= 6)
                        {
                            <span class="badge bg-warning">@x.Sayi</span>
                        }
                        @if (x.Sayi > 6)
                        {
                            <span class="badge bg-success">@x.Sayi</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
